<!DOCTYPE html>
<html>
<head>
  <title>{+title}{/title}</title>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css"/>
  <link rel="stylesheet" type="text/css" href="css/styleChat.css"/>
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Backbone-Sock-Chat</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="">Chat</a></li>
            <li><a href="">Direct</a></li>
            <li><a href="">Settings</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    {+content}{/content}
  
  <div class="container">
    <div id="app"></div>
  </div>

  
  <script type="text/template" id="main">
  <div class="row">
    
    <div class="col-sm-9">
      
      <div class="row">
        <div class="col-sm-12">
            <ul class="messages"></ul>
        </div>
      </div>
      
      <div class="row spacer">
      </div>
      
      <div class="row">
        <div class="col-sm-8">
          <form class="send-form" action="">
            <input class="form-control" id="m" autocomplete="off" placeholder="Enter a message ..."></input>
          </form>
        </div>
        <div class="col-sm-4">
          <button class="send-btn btn btn-block btn-info">Message</button>
        </div>
      </div>

    </div> <!-- col-sm-9 -->
    
    <div class="col-sm-3" id="chatters">
        <h5><span class="count"></span> users chatting</h5>
        <ul class="chatters"></ul>
    </div>
    
  </div>
  </script>
  
  <script src="js/lib/socket.io.js"></script>
  <script src="js/lib/jquery.min.js"></script>
  <script src="js/lib/bootstrap.min.js"></script>
  <script src="js/lib/underscore-min.js"></script>
  <script src="js/lib/backbone.js"></script>
  <script src="js/views/main.js"></script>
  <script src="js/models/main.js"></script>
  <script src="js/controllers/main.js"></script>
  <script src="js/sockchat.js"></script>
</body>
</html>